<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>cmis-addon-archive</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- Extension war from ECMS -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.exoplatform.ecms:ecms-ext-xcmis-extension:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>ecm-xcmis-extension.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.xcmis:*:jar</include>
        <include>org.apache.abdera:*:jar</include>
        <include>*:ecms-ext-xcmis-*:jar</include>
        <include>org.apache.ws.commons.axiom:*:jar</include>
        <include>org.apache.lucene:lucene-queries:jar</include>
        <include>jaxen:*:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
